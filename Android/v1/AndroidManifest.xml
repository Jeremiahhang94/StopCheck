<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stopcheck"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stopcheck.activities.MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stopcheck.activities.LocationReminderActivity"
            android:label="@string/title_activity_location_reminder" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.ReminderNotesActivity"
            android:label="@string/title_activity_reminder_notes" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.UpdateReminderNotesActivity"
            android:label="@string/title_activity_update_reminder_notes" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.ReminderRepeatActivity"
            android:label="@string/title_activity_reminder_repeat" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.UpdateReminderRepeatActivity"
            android:label="@string/title_activity_update_reminder_repeat" >
        </activity>
        <activity
            android:name="com.stopcheck.activities.AllLocationActivity"
            android:label="@string/title_activity_all_location" >
        </activity>
    </application>

</manifest>
